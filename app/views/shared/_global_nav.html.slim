          = link_to "SINGLES", rankings_singles_path, class: 'dropdown-item'
          = link_to "DOUBLES", rankings_doubles_path, class: 'dropdown-item'
          = link_to "WOMENS SINGLES", womens_singles_rankings_path, class: 'dropdown-item'
          = link_to "WOMENS DOUBLES", womens_doubles_rankings_path, class: 'dropdown-item'
      li.nav-item
        = link_to 'PRO SHOP', pro_shop_show_path, class: 'nav-link'
      li.nav-item
        = link_to 'PHOTOS', photos_path, class: 'nav-link'
      li.nav-item
        = link_to 'HALL OF FAME', hall_of_fames_path, class: 'nav-link'
      li.nav-item
