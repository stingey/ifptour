    span.navbar-toggler-icon
  = link_to image_tag('ifptry.png', class: 'ifp-logo pr-5'), root_path
  .collapse.navbar-collapse id="navbarNavDropdown"
    ul.navbar-nav
      li.nav-item
        = link_to 'TOURNAMENTS', tournaments_path, class: 'nav-link'
      li.nav-item
        = link_to 'RESULTS', results_path, class: 'nav-link'
      li.nav-item.dropdown
        = link_to 'PLAYER RANKINGS', rankings_path, class: 'nav-link dropdown-toggle', id: 'navbarDropdownMenuLink', 'data-toggle': 'dropdown', 'aria-haspopup': 'true', 'aria-expanded': 'false'
